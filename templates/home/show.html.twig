{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <section class="hero is-primary">
        <div class="hero-body">
            <div class="container">
                <h1 class="title">
                  Titre : {{ demande.titre }}
                </h1>
                <h2 class="subtitle">

                </h2>
            </div>
        </div>
    </section>

    <div class="container">
        <div class="colmuns">
            <div class="column">
                <h3 class="title is-3 has-text-grey">Sommaire</h3>
            </div>
        </div>
        <div class="columns">
            <div class="column">
                <div class="columns">
                    <div class="column">
                        <div class="box">
                            <p>{{ demande.sommaire }}</p>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="colmuns">
            <div class="column">
                <h3 class="title is-3 has-text-grey">Description</h3>
            </div>
        </div>
        <div class="columns">
            <div class="column">
                <div class="columns">
                    <div class="column">
                        <div class="box">
                            <p>{{ demande.contenu }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="colmuns">
            <div class="column">
                <h3 class="title is-3 has-text-grey">Montant</h3>
            </div>
        </div>
        <div class="columns">
            <div class="column">
                <div class="columns">
                    <div class="column">
                        <div class="box">
                            <p>
                              {{ demande.budget }} €
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="columns">
            <div class="column">
                <h3 class="title is-3 has-text-grey">Ils ont voté</h3>
            </div>
        </div>
        <div class="columns">
            <div class="column">
                <div class="columns">
                    <div class="column">
                        <div class="box">

                            <div class="level">
                                <div class="level-left">
                                    <div class="level-item">
                                        <span class="icon">
                                          <i class="fas fa-home"></i>
                                        </span>
                                        <p>38 %</p>
                                    </div>
                                </div>
                                <div class="level-right">
                                    <div class="level-item">
                                        <p>Pour <span>{{ demande.nombreVotes }} votants</span></p>
                                    </div>
                                </div>
                            </div>
                            <div class="level">
                                <div class="level-item -mt-1">
                                    <progress class="progress is-danger" value="15" max="100">15%</progress>
                                </div>
                            </div>


                            <div class="level">
                                <div class="level-left">
                                    <div class="level-item">
                                        <span class="icon">
                                          <i class="fas fa-home"></i>
                                        </span>
                                        <p>38 %</p>
                                    </div>
                                </div>
                                <div class="level-right">
                                    <div class="level-item">
                                        <p>Pour <span>988 050</span></p>
                                    </div>
                                </div>
                            </div>
                            <div class="level">
                                <div class="level-item -mt-1">
                                    <progress class="progress is-success" value="15" max="100">15%</progress>
                                </div>
                            </div>


                            <div class="level">
                                <div class="level-left">
                                    <div class="level-item">
                                        <span class="icon">
                                          <i class="fas fa-home"></i>
                                        </span>
                                        <p>38 %</p>
                                    </div>
                                </div>
                                <div class="level-right">
                                    <div class="level-item">
                                        <p>Pour <span>988 050</span></p>
                                    </div>
                                </div>
                            </div>
                            <div class="level">
                                <div class="level-item -mt-1">
                                    <progress class="progress" value="15" max="100">15%</progress>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
{# IF #}
        <div class="colmuns">
            <div class="column">
                <h3 class="title is-3 has-text-grey">Je vote</h3>
            </div>
        </div>
        <div class="columns">
            <div class="column">
                <div class="columns">
                    <div class="column">
                        <div class="box">
                            <div class="buttons has-addons is-centered">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{# ELSE#}
        <div class="colmuns">
            <div class="column">
                <h3 class="title is-3 has-text-grey">Mon vote</h3>
            </div>
        </div>
        <div class="columns">
            <div class="column">
                <div class="columns">
                    <div class="column">
                        <div class="box">
                            <div class="buttons has-addons is-centered">
                                <span class="button">Neutre</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


{% endblock %}

